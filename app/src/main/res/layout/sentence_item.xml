<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_padding"
    android:id="@+id/sentence_list_item_container">

    <ImageView
        android:id="@+id/sentence_icon_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_local_florist_black_24dp" />

    <TextView
        android:id="@+id/sentence_title_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:layout_toEndOf="@id/sentence_icon_item"
        android:textColor="@android:color/black"
        android:text="sentence Title"
        android:layout_marginStart="@dimen/top_bottom_margin" />

    <TextView
        android:id="@+id/sentence_content_item"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sentence_title_item"
        android:layout_alignStart="@id/sentence_title_item"
        android:text="sentence Content Here"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>